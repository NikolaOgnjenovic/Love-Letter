<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoveLetter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_primary</item>
        <item name="colorSecondaryVariant">@color/theme_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/theme_secondary</item>

        <item name="android:textViewStyle">@style/FontTextViewStyle</item>
        <item name="android:buttonStyle">@style/FontButtonStyle</item>
    </style>

    <style name="FontTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/dongle_bold</item>
    </style>

    <style name="FontButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/dongle_bold</item>
    </style>
</resources>