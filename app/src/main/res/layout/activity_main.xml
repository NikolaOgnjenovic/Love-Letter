<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/helpButton"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/help"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_info_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpButton" />

    <TextView
        android:id="@+id/userNeedsView"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/user_needs"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <EditText
        android:id="@+id/userNeedsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@color/theme_primary"
        android:hint="@string/user_needs_input_hint"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userNeedsView" />

    <TextView
        android:id="@+id/userMoodView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_mood"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNeedsView" />

    <EditText
        android:id="@+id/userMoodInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@color/theme_primary"
        android:hint="@string/user_mood_input_hint"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNeedsView" />

    <ImageButton
        android:id="@+id/sendToPartner"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/help"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userMoodView" />

    <TextView
        android:id="@+id/partnerNeedsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:text="@string/partner_needs"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendToPartner" />

    <TextView
        android:id="@+id/partnerMoodView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/partner_mood"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partnerNeedsView" />

    <TextView
        android:id="@+id/partnerTokenView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/partner_token_view"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/partnerToken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/partnerToken" />

    <EditText
        android:id="@+id/partnerToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:autofillHints=""
        android:background="@color/theme_primary"
        android:hint="@string/partners_token"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/partnerTokenView" />

    <Button
        android:id="@+id/copyUserToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copy_your_token"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>